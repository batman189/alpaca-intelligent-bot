# Production Environment Variables
# Copy this to .env.production and fill in your values

# === REQUIRED: Alpaca Trading API ===
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# For live trading, use: https://api.alpaca.markets

# === REQUIRED: Database ===
POSTGRES_PASSWORD=secure_random_password_here
POSTGRES_URL=postgresql://trading:secure_random_password_here@postgres:5432/trading_bot

# === REQUIRED: Monitoring ===
GRAFANA_PASSWORD=secure_admin_password_here

# === OPTIONAL: Application Settings ===
ENV=production
LOG_LEVEL=INFO
PORT=8080

# === OPTIONAL: Risk Management Overrides ===
MAX_PORTFOLIO_RISK=0.02
MAX_POSITION_SIZE=0.10
DAILY_LOSS_LIMIT=0.05
STOP_LOSS_PCT=0.08